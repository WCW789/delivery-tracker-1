<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="user_id_box"></label>
        <input type="hidden" id="user_id_box" name="query_user_id" value="false">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>

<div class="waiting_on">
  <h2>Waiting on</h2>

  <ul>
    <% @list_of_deliveries.each do |delivery| %>
      <% if delivery.arrived == true %>
        <li>
          <div><%= delivery.description %></div>
          <div style="color: red">
            Supposed to arrive on
            <%= delivery.supposed_to_arrive_on %>
          </div>

          <div>
          </div>

          <div>
            <form action="/modify_delivery/<%= delivery.id %>" method="post">
              <label for="test"></label>
              <input id="test" type="hidden" name="query_user_id" value="<%= delivery.id %>">

              <label for="test2"></label>
              <input id="test2" type="hidden" name="query_description" value="<%= delivery.description %>">

              <label for="test3"></label>
              <input id="test3" type="hidden" name="query_details" value="<%= delivery.details %>">

              <label for="test4"></label>
              <input id="test4" type="hidden" name="query_supposed_to_arrive_on" value="<%= delivery.supposed_to_arrive_on %>">

              <button>Mark as received</button>
            </form>
          </div>

          <br>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<hr>

<div class="received">
  <h2>Received</h2>

  <ul>
    <% @list_of_deliveries.each do |delivery| %>
      <% if delivery.arrived == false %>
        <li>
          <div><%= delivery.description %></div>

          <div>
            <small>
              <% @updated_time = delivery.updated_at%>
              Updated <%= @updated_time %> minutes ago

              <a href="/delete_delivery/<%= delivery.id %>">Delete</a>
            </small>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

